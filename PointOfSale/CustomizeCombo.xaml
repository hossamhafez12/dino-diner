<Page x:Class="PointOfSale.CustomizeCombo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CustomizeCombo">

    <WrapPanel>
        <WrapPanel.Resources>
            <Style TargetType="Button">
                <Setter Property="MinWidth" Value="140"></Setter>
                <Setter Property="MinHeight" Value="140"></Setter>
            </Style>
        </WrapPanel.Resources>
    
    <Button Click ="SelectS">
        Side
    </Button>
        <Button Click ="SelectD">
            Drink
    </Button>
        <Button>Size</Button>
        <RadioButton GroupName="Size" Content="Small"/>
        <RadioButton GroupName="Size" Content="Medium"/>
        <RadioButton GroupName="Size" Content="Large"/>
    </WrapPanel>
</Page>
