                    </label>
                    <label>
                        <input type="checkbox" name="excludeIngredient" value="Cheese Product" checked="@Model.menuCategory.Contains("Cheese Product")" />
                        Cheese Product
                    </label>
                    <label>
                        <input type="checkbox" name="excludeIngredient" value="Pork Sausage" checked="@Model.menuCategory.Contains("Pork Sausage")" />
