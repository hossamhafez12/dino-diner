@page
@model Website.Pages.MenuModel
@{
    ViewData["Title"] = "Menu";
}

<h1>Menu</h1>

<div class="row">
    <div class="column">
        <h2>Combo</h2>
        @foreach (var item in Model.Items)
        {
            if (item is CretaceousCombo combo)
            {
                <div class="menu-item">
                    <h3>@combo.ToString()</h3>
                    <table class="table">
                        <tr>
                            <th>Size</th>
                            <th>Price</th>
                            <th>Calories</th>
                        </tr>
                        <tr>
                            <td>Small</td>
                            <td>@combo.Price</td>
                            <td>@combo.Calories </td>
                        </tr>
                        @{combo.Size = Size.Medium; }
                        <tr>
                            <td>Medium</td>
                            <td>@combo.Price</td>
                            <td>@combo.Calories </td>
                        </tr>
                        @{ combo.Size = Size.Large;}
                        <tr>
                            <td>Large</td>
                            <td>@combo.Price</td>
                            <td>@combo.Calories </td>
                        </tr>
                    </table>
                    @foreach (string s in combo.Ingredients)
                    {
                        <p>@s</p>
                    }
                    <p>Drink: @combo.Drink</p>
                    <p>Sides: @combo.Side</p>
                </div>
            }
        }
    </div>

    <div class="column">
        <h2>Entrees</h2>
        @foreach (var item in Model.Items)
        {
            if (item is Entree entree)
            {
                <div class="menu-item">
                    <h3>@entree.ToString()</h3>

                    @foreach (string s in entree.Ingredients)
                    {
                        <p>@s</p>
                    }
                    <p>@entree.Price</p>
                    <p>@entree.Calories </p>
                </div>
            }
        }
    </div>
    <div class="column">
        <h2>Sides</h2>
        @foreach (var item in Model.Items)
        {
            if (item is Side side)
            {
                <div class="menu-item">
                    <h3>@side.ToString()</h3>
                    <table class="table">
                        <tr>
                            <th>Size</th>
                            <th>Price</th>
                            <th>Calories</th>
                        </tr>
                        <tr>
                            <td>Small</td>
                            <td>@side.Price</td>
                            <td>@side.Calories </td>
                        </tr>
                        @{side.Size = Size.Medium; }
                        <tr>
                            <td>Medium</td>
                            <td>@side.Price</td>
                            <td>@side.Calories</td>
                        </tr>
                        @{ side.Size = Size.Large;}
                        <tr>
                            <td>Large</td>
                            <td> @side.Price</td>
                            <td> @side.Calories</td>
                        </tr>
                    </table>
                    @foreach (string s in side.Ingredients)
                    {
                        <p>@s</p>
                    }
                </div>
            }
        }
        <h2>Drinks</h2>
        @foreach (var item in Model.Items)
        {
            if (item is Drink drink)
            {
                <div class="menu-item">
                    <h3>@drink.ToString()</h3>
                    <table class="table">
                        <tr>
                            <th>Size</th>
                            <th>Price</th>
                            <th>Calories</th>
                        </tr>
                        <tr>
                            <td>Small</td>
                            <td>@drink.Price</td>
                            <td>@drink.Calories </td>
                        </tr>
                        @{drink.Size = Size.Medium;}
                        <tr>
                            <td>Medium</td>
                            <td>@drink.Price</td>
                            <td>@drink.Calories</td>
                        </tr>
                        @{drink.Size = Size.Large;}
                        <tr>
                            <td>Large</td>
                            <td>Price: @drink.Price</td>
                            <td>Calories: @drink.Calories</td>
                        </tr>
                    </table>
                    @foreach (string s in drink.Ingredients)
                    {
                        <p>@s</p>
                    }
                </div>
            }
        }
    </div>
    <div class="column">
